  <script>
    const ctx = document.getElementById('speedChart').getContext('2d');
    const speedChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Bugatti Chiron', 'Koenigsegg Jesko', 'McLaren Speedtail', 'Lamborghini Aventador', 'Ferrari SF90'],
        datasets: [{
          label: 'Top Speed (mph)',
          data: [304, 278, 250, 217, 211],
          backgroundColor: '#e50914'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: true },
          title: {
            display: true,
            text: 'Top Speed Comparison'
          }
        },
        scales: {
          y: {
            beginAtZero: false
          }
        }
      }
    });
  </script>
